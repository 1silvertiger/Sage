<html leng="en">
<%- include ./head.html %>

<body>
    <%- include ./navbar.html %>

    <div id="app" class="container">
        <div class="row">
            <h1>Bills</h1>
        </div>
        <div class="row" v-if="lateBills.length > 0">
            <div class="col s12 l12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Late bills</span>
                        <table class="striped highlight">
                            <thead>
                                <th>Name</th>
                                <th>Amount</th>
                                <th>Due date</th>
                            </thead>
                            <tbody>
                                <tr v-for="bill in lateBills">
                                    <td class="modal-trigger" :date-target="bill.id">{{ bill.name }}</td>
                                    <td class="modal-trigger" :data-target="bill.id">{{ getFormattedCurrency(bill.amount) }}</td>
                                    <td class="modal-trigger" :date-target="bill.id">
                                        {{ getFormattedDate(bill.dueDate) }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 l12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Current bills</span>
                        <table class="striped highlight">
                            <thead>
                                <th></th>
                                <th>Name</th>
                                <th>Amount</th>
                                <th>Repeats</th>
                                <th>Due next</th>
                                <th>Charged on weekday?</th>
                                <th>Autopay?</th>
                            </thead>
                            <tbody>
                                <tr v-for="b in user.bills">
                                    <td>
                                        <form>
                                            <p><label>
                                                    <input :id="'chkBx' + b.id" type="checkbox" class="filled-in"
                                                        v-on:change="billsToDelete.push(b.id)">
                                                    <span :for="'chkBx' + b.id"></span>
                                                </label></p>
                                        </form>
                                    </td>
                                    <td class="modal-trigger" :data-target="b.id">{{ b.name }}</td>
                                    <td class="modal-trigger" :data-target="b.id">{{ getFormattedCurrency(b.amount) }}
                                    </td>
                                    <td class="modal-trigger" :data-target="b.id">Every {{ b.due }} {{ b.numOfPeriods }}
                                        {{ getSemanticPeriod(b.periodId) }}</td>
                                    <td class="modal-trigger" :data-target="b.id">{{ getFormattedDate(b.dueDate) }}</td>
                                    <td class="modal-trigger" :data-target="b.id">{{ b.weekDay ? 'Yes' : 'No' }}</td>
                                    <td class="modal-trigger" :data-target="b.id">{{ b.autoPay ? 'Yes' : 'No' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-action">
                        <a id="deleteBillsBtn" class="waves-effect waves-green btn"
                            v-on:click="deleteBills(billsToDelete)">Delete selected</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 l12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Add new bill</span>
                        <div id='addBillCarousel' class="carousel carousel-slider">
                            <!-- Bill details -->
                            <div class="carousel-item">
                                <div class="card">
                                    <div class="card-content">
                                        <span class="card-title">Bill details</span>
                                        <div class="input-field med-input-field">
                                            <input type="text" id="addName" class="validate"
                                                v-model="billToCreate.name">
                                            <label for="addName">Name</label>
                                        </div>
                                        <div class="input-field med-input-field">
                                            <input type="number" id="addAmount" class="validate"
                                                v-model="billToCreate.amount">
                                            <label for="addAmount">Amount</label>
                                        </div>
                                        <input id="addDueDate" type="text" class="datepicker">
                                        <label for="addDueDate">Due date</label>
                                    </div>
                                    <div class="card-action">
                                        <a id="autopayBtn" class="waves-effect btn hide"
                                            onclick="prevAddCarouselItem();">Autopay</a>
                                        <a class="waves-effect btn" onclick="nextAddCarouselItem();">Notifications</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Noticifations -->
                            <div class="carousel-item">
                                <div class="card">
                                    <div class="card-content">
                                        <span class="card-title">Notifications</span>
                                        <table class="striped highlight">
                                            <thead>
                                                <th colspan="2">Periods before bill is due:</th>
                                            </thead>
                                            <tbody>
                                                <tr v-for="n in billToCreate.notifications">
                                                    <td>{{ n.periodsBeforeBillIsDue }}</td>
                                                    <td>{{ getSemanticPeriod(n.periodId) }}</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="input-field">
                                                            <input
                                                                v-model="billNotificationToCreate.periodsBeforeBillIsDue"
                                                                id="addNotificationNumber" type="number"
                                                                class="validate">
                                                            <label for="#addNotificationNumber"></label>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <select v-model="billNotificationToCreate.periodId">
                                                            <option value="1" :selected="true">day(s)</option>
                                                            <option value="2">week(s)</option>
                                                            <option value="3">month(s)</option>
                                                            <option value="4">quarter(s)</option>
                                                            <option value="5">year(s)</option>
                                                        </select>
                                                        <label>Notification cycle</label>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="card-action">
                                        <a class="waves-effect btn" onclick="prevAddCarouselItem();">Details</a>
                                        <a class="waves-effect btn" onclick="nextAddCarouselItem();">Cycle</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Bill cycle -->
                            <div class="carousel-item">
                                <div class="card">
                                    <div class="card-content">
                                        <span class="card-title">Bill cycle</span>
                                        This bill repeats every
                                        <div class="input-field inline">
                                            <input v-model="billToCreate.numOfPeriods" id="addNumOfPeriods"
                                                type="number" class="validate">
                                            <label for="#addNumOfPeriods"></label>
                                        </div>
                                        <div class="input-field inline">
                                            <select v-model="billToCreate.periodId">
                                                <option value="1">day(s)</option>
                                                <option value="2">week(s)</option>
                                                <option value="3" :selected="true">month(s)</option>
                                                <option value="4">quarter(s)</option>
                                                <option value="5">year(s)</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="card-action">
                                        <a class="waves-effect btn" onclick="prevAddCarouselItem();">Notifications</a>
                                        <a class="waves-effect btn" onclick="nextAddCarouselItem();">Autopay</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Autopay -->
                            <div class="carousel-item">
                                <div class="card">
                                    <div class="card-content">
                                        <span class="card-title">Autopay</span>
                                        This bill is on autopay from the following account:
                                        <div class="input-field">
                                            <select v-model="billToCreate.accountId">
                                                <optgroup v-for="item in user.items" :label="item.institutionName">
                                                    <option v-for="a in item.accounts" :value="a.id">{{ a.name }}
                                                    </option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="card-action">
                                        <a class="waves-effect btn" onclick="prevAddCarouselItem();">Cycle</a>
                                        <a class="waves-effect btn" onclick="nextAddCarouselItem();">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a id="addNewBillBtn" class="waves-effect waves-light btn"
                            v-on:click="createOrUpdateBill(billToCreate)">Add!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src='scripts/bills.ejs.js' defer></script>
    <script defer>
        const URL = '<%= URL %>';
        const user = JSON.parse(`<%- JSON.stringify(user) %>`);
    </script>
</body>

</html>