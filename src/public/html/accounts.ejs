<!doctype html>
<html>
<%- include ./head.html %>

<body>
    <%- include ./navbar.html %>

    <div id="app" class="container">
        <div class="row">
            <h1>Accounts</h1>
        </div>
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card" v-for="item in user.items">
                    <div class="card-content">
                        <span class="card-title">{{ item.institutionName }} accounts:</span>
                        <table class="striped highlight">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Official name</th>
                                    <th>Type</th>
                                    <th>Subtype</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="account in item.accounts">
                                    <td>{{account.name}}</td>
                                    <td>{{account.officialName}}</td>
                                    <td>{{account.type}}</td>
                                    <td>{{account.subType}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <button id="plaid" class="btn green lighten-2" >Add new</button>
        </div>
    </div>
</body>

<script src="scripts/plaid.js" type="text/javascript" defer></script>
<script src="scripts/accounts.ejs.js" defer></script>

<script defer>
    const URL = '<%= URL %>';
    const user = JSON.parse(`<%- JSON.stringify(user) %>`);
    const PLAID_ENV = '<%= PLAID_ENV %>';
    const PLAID_PUBLIC_KEY = '<%= PLAID_PUBLIC_KEY %>';
    const PLAID_PRODUCTS = '<%= PLAID_PRODUCTS %>';
</script>

</html>