<html lang="en">

<%- include ./head.html %>

<!-- Custom styles -->
<link rel="stylesheet" type="text/css" href="stylesheets/css/budgets.css">

<body>
    <%- include ./navbar.html %>

    <div id="app" class="container">
        <div class="row">
            <h1>Budgets</h1>
        </div>
        <div class="row hide-on-large-only">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Charts</span>
                    <div id="budgetsCarousel" class="carousel carousel-slider">
